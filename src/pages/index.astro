---
import { getCollection } from 'astro:content';
import SiteHeader from '../components/SiteHeader.astro';
const posts = await getCollection('blog');
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Lato:wght@400;700&family=Montserrat:wght@700&display=swap" rel="stylesheet" />
		<title>Steve Hill â€“ Blog</title>
		<style>
			body {
				font-family: 'Lato', system-ui, sans-serif;
				background: linear-gradient(135deg, #e0e7ef 0%, #c9d6ff 50%, #e2e2e2 100%);
				color: #222;
				margin: 0;
				min-height: 100vh;
			}
			h1 {
				margin-top: 0;
				font-size: 2.7rem;
				font-family: 'Montserrat', system-ui, sans-serif;
				font-weight: 700;
				letter-spacing: 0.01em;
				text-align: center;
			}
			.post-list {
				list-style: none;
				padding: 0;
				margin: 3rem auto 0 auto;
				max-width: 700px;
				display: block;
				width: 100%;
			}
			.post-item {
				margin-bottom: 2.2rem;
				padding-bottom: 2.2rem;
				border-bottom: 1px solid #e5e7eb;
			}
			.post-title {
				font-size: 1.45rem;
				font-family: 'Montserrat', system-ui, sans-serif;
				font-weight: 700;
				margin: 0 0 0.3rem 0;
				color: #1a237e;
				text-decoration: none;
				transition: color 0.2s;
			}
			.post-title:hover {
				color: #3949ab;
			}
			.post-meta {
				font-size: 0.98rem;
				color: #888;
				margin-bottom: 0.5rem;
			}
			.post-excerpt {
				font-size: 1.08rem;
				color: #444;
				margin: 0.2rem 0 0 0;
			}
			.post-tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5rem;
				margin: 0.7rem 0 0 0;
				padding: 0;
				list-style: none;
			}
			.post-tag {
				background: #e3e8f0;
				color: #1a237e;
				font-size: 0.92rem;
				padding: 0.18em 0.85em;
				border-radius: 999px;
				font-weight: 500;
				letter-spacing: 0.01em;
				display: inline-block;
			}
			@media (max-width: 800px) {
				.post-list {
					padding-left: 1rem;
					padding-right: 1rem;
				}
			}
		</style>
	</head>
	<body>
		<SiteHeader active="blog" />
		<ul class="post-list">
			{posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()).map(post => (
				<li class="post-item" key={post.id}>
					<a class="post-title" href={post.slug ? `/${post.slug}/` : '#'}>{post.data.title}</a>
					<div class="post-meta">{new Date(post.data.pubDate).toLocaleDateString(undefined, { year: 'numeric', month: 'long', day: 'numeric' })}</div>
					<div class="post-excerpt">{post.data.excerpt}</div>
					{post.data.tags && post.data.tags.length > 0 && (
						<ul class="post-tags">
							{post.data.tags.map(tag => (
								<li class="post-tag" key={tag}>{tag}</li>
							))}
						</ul>
					)}
				</li>
			))}
		</ul>
	</body>
</html>
